<idea-plugin>
  <id>br.com.emersonmendes.hover-translation</id>

  <name>Hover-translation</name>

  <vendor email="emerson.emendes@gmail.com" url="https://emersonmendes.com.br">Emerson Mendes</vendor>

  <description><![CDATA[
    This plugin helps you to translate any or almost any elements from the Editor.
  ]]></description>

  <depends>com.intellij.modules.platform</depends>
  <depends>org.jetbrains.kotlin</depends>
  <extensions defaultExtensionNs="com.intellij">
    <lang.documentationProvider
        language="kotlin"
        implementationClass="br.com.emersonmendes.hovertranslation.ElementTranslatorDocumentationProvider"
    />
  </extensions>
  <actions>

    <action
       id="br.com.emersonmendes.hovertranslation.AddTranslationAction"
       class="br.com.emersonmendes.hovertranslation.AddTranslationAction"
       text="Add Translation"
       description="Add Translation"
    >
      <add-to-group group-id="EditorPopupMenu" anchor="last"/>
    </action>
  </actions>
</idea-plugin>